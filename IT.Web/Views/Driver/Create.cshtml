
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="js-page-content" role="main" class="page-content">

    <div class="subheader">
        <h1 class="subheader-title">
            <i class='subheader-icon fal fa-edit'></i> Create Vehicle
        </h1>
    </div>
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2>
                        Vehicle <span class="fw-300"></span>
                    </h2>
                    
                </div>
                <div class="panel-container show">
                    <div class="panel-content">
                        <div class="panel-tag">
                            Please add your vehicle from here...
                        </div>
                        <form>
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Driver Name</label>
                                        <input type="text" id="DriverName" name="DriverName" class="form-control" placeholder="Enter Driver Name">
                                    </div>
                                    

                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">contact Number</label>
                                        <input type="text" id="ContactNumber" name="ContactNumber" class="form-control" placeholder="contact Number">
                                    </div>


                                     <div class="form-group">
                                        <label class="form-label" for="simpleinput">Email Eddress</label>
                                        <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter Email Address">
                                    </div>

                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Facebook ID</label>
                                        <input type="text" id="Facebook" name="Facebook" class="form-control" placeholder="Enter facebook ID">
                                    </div>


                                      <div class="form-group">
                                                <label class="form-label" for="single-label">
                                                    Select License Type
                                                </label>
                                                <select class="select2 form-control" id="single-label">
                                                    
                                                        <option value="CA">California</option>
                                                        <option value="NV">Nevada</option>
                                                        <option value="OR">Oregon</option>
                                                        <option value="WA">Washington</option>
                                                 
                                                </select>
                                            </div>



                                   <div class="form-group">
                                        <label class="form-label" for="simpleinput">License Expiry</label>
                                        <input type="text" id="LicenseExpiry" name="LicenseExpiry" class="form-control" placeholder="Enter License Expiry">
                                    </div>


                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Color</label>
                                        <input type="text" id="simpleinput" class="form-control" placeholder="Enter Color">
                                    </div>



                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Nationality</label>
                                        <input type="text" id="Nationality" name="Nationality" class="form-control" placeholder="Enter Nationality">
                                    </div>


                                    <div class="form-group">
                                        <label class="form-label" for="simpleinput">Notes</label>
                                       <textarea class="form-control" id="Notes" name="Notes" placeholder="Notes"></textarea>
                                    </div>


                                </div>


                                <div class="col-md-6">
                                    <h3 class="py-5">Driving License</h3>

                                    <div class="row">

                                       <div class="col-md-6">

                                           <div class="row">
                                                 <div class="col-md-12">
                                                      <label class="form-label">Front side</label>
                                                 </div>
                                                 <div class="col-md-12">
                                                       <label class=newbtn>
	                                                    <img id="blah" src="/assets/staticImages/icon1.png" >
	                                                   <input id="DrivingLicenseFront" name="DrivingLicenseFront" class='pis' onchange="readURL(this);" type="file" >
	                                                   </label>
                                                 </div>
                                            </div>
  
                                        </div>

                                        <div class="col-md-6">
                                             <div class="row">
                                                 <div class="col-md-12">
                                                      <label class="form-label">Front side</label>
                                                 </div>
                                                 <div class="col-md-12">
                                                       <label class=newbtn>
	                                                    <img id="blah" src="/assets/staticImages/icon1.png" >
	                                                   <input id="DrivingLicenseBack" name="DrivingLicenseBack" class='pis' onchange="readURL(this);" type="file" >
	                                                   </label>
                                                 </div>
                                            </div>
                                        </div>

                                    </div>




                                    <h3 class="py-5">UAE ID</h3>

                                    <div class="row">

                                        <div class="col-md-6">
                                            <label class="form-label">Front side</label>
                                            <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="IDUAECopyFront" name="IDUAECopyFront">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Back side</label>
                                            <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="IDUAECopyBack" name="IDUAECopyBack">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                        </div>

                                    </div>


                                     <h3 class="py-5">Passport (Details page)</h3>

                                    <div class="row">

                                        <div class="col-md-6">
                                            <label class="form-label">Front side</label>
                                            <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="PassportCopy" name="PassportCopy">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label">Back side</label>
                                            <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="PassportBack" name="PassportBack">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                        </div>

                                    </div>

                                      <h3 class="py-5">Visa</h3>

                                    <div class="row">

                                        <div class="col-md-6">
                                            <label class="form-label">Front side</label>
                                            <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="VisaCopy" name="VisaCopy">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                        </div>

                                    </div>



                                    <div class="row py-5">

                                        <div class="col-md-12">
                                           <button type="button" class="btn btn-primary btn-lg btn-block waves-effect waves-themed">Block
                                            <span>large</span>
                                             </button>
                                        </div>

                                       

                                    </div>
                                    
                                    

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>



<script>
 
 $('.newbtn').bind("click" , function () {
        $('#pic').click();
 });
 
  function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#blah')
                        .attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
</script>
<style>


#pic{
     display: none;
       }
       
 .newbtn{
         cursor: pointer;
      }
      #blah{
  max-width:100%;
  height:auto;
  margin-top:20px;
}

</style>

